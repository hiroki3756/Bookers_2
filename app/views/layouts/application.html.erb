<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav">Bookers</a>
    </nav>
    <nav>
      <% if user_signed_in? %> 
        <ul class="nav navbar-nav pull-right">
          <li><span class="glyphicon glyphicon-home" aria-hidden="true"></span><%= link_to 'Home', user_path(current_user.id) %></li>
          <li><span class="glyphicon glyphicon-user" aria-hidden="true"></span><%= link_to 'Users', users_path %></li>
