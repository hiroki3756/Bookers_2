<div class="container">
  <% if flash[:notice] %>
  <div class="flash">
  <%= flash[:notice] %>
  </div>
 <% end %>


  
  <div class="row"> 
  <div class="col-xs-3"> 
    <h2>User info</h2>
    <table class='table'>
      <tr>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.png", size:'60x60' %>
        </tr>    
      <tr>  
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </table>


    <div class="row">
      <%= link_to edit_user_path(current_user.id) do %>
        <span class="btn btn-default glyphicon glyphicon-wrench col-xs-12"></span>
      <% end %>
        </div>
    <%= form_for(@book) do |f| %>
      <% if @book.errors.any? %>
        <% @book.errors.full_messages.each do |message| %>
        <p>error</p>
        <%= message %>
      <% end %>
    <% end %>
    <h2>New book</h2>
  
    <div class="row">
      <h4>Title</h4>
        <%= f.text_field :title, class:"col-xs-12" %>
      <h4>Body</h4>
        <%= f.text_area :body, class:"col-xs-12" %><br>
        <div id="sub"> <p>ã€€</p><%= f.submit "Create Book", class:"btn btn-primary btn-block col-xs-12"  %></div>
      </div>
    <% end %>
  </div>

<div class="col-xs-9">
  <h2>Books</h2>
  <table class="table">
  <thead>
    <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @user.books.each do |book| %>
      <tr>
      <td><%= link_to root_path do %>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.png", size:'60x60' %>
      <% end %></td>
        <td><%= link_to book_path(book) do %>
          <%= book.title %>
          <% end %></td>
        <td><%= book.body %></td>
        </tr>
    <% end %>
  </tbody>
  </table>
</div>
</div>
</div>
