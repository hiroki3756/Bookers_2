<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
      <p>error</p>
      <%= message %>
    <% end %>
  <% end %>
  <h2>User info</h2>
  <table>
    <tr>
      <th><h4>Name</h4></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><h4>Image</h4></th>
      <td><%= f.attachment_field :profile_image %></td>
    </tr>
    <tr>
      <th><h4>introduction</h4></th>
      <td><%= f.text_area :introduction %></td>
      <th><%= f.submit "Update User " %></th>
  </table>
<% end %>